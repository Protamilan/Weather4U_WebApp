    <script>
        $(document).ready(function () {
            const inputField = $('#placeInput');
            const clearButton = $('.x');
            clearButton.hide();
            $('#placeInput').on('input', function () {
                const place = $(this).val();
                if (place) {
                    $.post('/auto', { place: place }, function (data) {
                        $('#suggestions').empty(); // Clear previous suggestions
                        data.forEach(function (item) {
                            $('#suggestions').append(`<li>${item}</li>`); // Add new suggestions
                        });
                    });
                } else {
                    $('#suggestions').empty(); // Clear suggestions if input is empty
                }
            });

            // Handle suggestion click
            $(document).on('click', '#suggestions li', function () {
                $('#placeInput').val($(this).text()); // Set input value to clicked suggestion
                $('#suggestions').empty(); // Clear suggestions after selection
                $("form").submit();
                clearButton.hide();
            });

            // Close suggestions when clicking outside
            $(document).on('click', function (e) {
                if (!$(e.target).closest('#placeInput').length) {
                    $('#suggestions').empty();
                }
            });
            inputField.on('input focus', function () {
                if ($(this).val()) {
                    clearButton.show();
                } else {
                    clearButton.hide();
                }
            });

            // Clear the input field when the clear button is clicked
            clearButton.on('click', function () {
                inputField.val('').focus();
                $(this).hide();
            });

        });
    </script>
